{
  "language": "en",
  "source": {
    "type": "http_html",
    "url": "https://example.com/forum_page.html",
    "name": "http_demo",
    "selectors": {
      "container": "article.post",
      "title": "h2",
      "content": "p.content",
      "link": "a.permalink",
      "id_attr": "data-id",
      "created_at_attr": "data-created-at",
      "lang_attr": "data-lang"
    }
  },
  "rules": [
    {
      "id": "thesis_need",
      "description": "论文辅导/需求相关",
      "enabled": true,
      "conditions": [
        { "type": "contains_any", "field": "content", "values": ["论文", "辅导", "thesis", "paper"] }
      ],
      "template": "reply_thesis_zh",
      "target_lang": "zh"
    }
  ],
  "templates": {
    "reply_thesis_zh": "你好，我看到你提到论文相关需求（{title}）。我可以提供数据采集/监控/自动化方案，先聊聊你的具体方向和期望吧。"
  }
}
